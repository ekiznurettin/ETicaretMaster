@model CategoryListViewModel
@{
    ViewData["Title"] = "Kategori Ekle/Güncelle";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="AddOrEdit" onsubmit="return JQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Category.CategoryId" />
            <div class="form-group">
                <label class="row col-sm-12 control-label">Kategori Adı</label>
                <div class="row col-sm-12">
                    <input asp-for="Category.CategoryName" class="form-control" placeholder="Bilgisayar" />
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="row col-sm-12 control-label">Kategori Açıklaması</label>
                <div class="row col-sm-12">
                    <input asp-for="Category.Description"  class="form-control" placeholder="Bilgisayar" />
                    <span asp-validation-for="Category.Description" class="text-danger"></span>
                </div>
            </div>
            <div class="row pull-right">
                <button type="submit" class="btn btn-danger modal-confirm">Evet</button>
                &nbsp;&nbsp;&nbsp;
                <button class="btn btn-default modal-dismiss" data-dismiss="modal">İptal</button>&nbsp;&nbsp;
            </div>
        </form>
    </div>
</div>

