@model ProductListViewModel
@{
    ViewData["Title"] = "Ürün Ekle/Güncelle";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="AddOrEdit" onsubmit="return JQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Product.ProductId" />
            <div class="form-group">
                <label class="row col-sm-12 control-label">Ürün Adı</label>
                <div class="row col-sm-12">
                    <input asp-for="Product.ProductName" class="form-control" placeholder="Bilgisayar" />
                    <span asp-validation-for="Product.ProductName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="row col-md-12 control-label" for="inputSuccess">Ürün Kategorisi</label>
                <div class="row col-md-12">
                    <select class="form-control mb-md" asp-for="Product.CategoryId">
                        <option value="">...</option>
                        @foreach (var item in Model.Categories.Data)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="row col-sm-12 control-label">Ürün Fiyatı</label>
                <div class="row col-sm-12">
                    <input asp-for="Product.UnitPrice" class="form-control" placeholder="5000,00" />
                    <span asp-validation-for="Product.UnitPrice" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="row col-sm-12 control-label">Stok Sayısı</label>
                <div class="row col-sm-12">
                    <input asp-for="Product.UnitsInStock" class="form-control" placeholder="200" />
                    <span asp-validation-for="Product.UnitsInStock" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="row col-sm-12 control-label">Ürün Bilgisi</label>
                <div class="row col-sm-12">
                    <input asp-for="Product.QuantityPerUnit" class="form-control" placeholder="1 Kutu * 5Adet" />
                    <span asp-validation-for="Product.QuantityPerUnit" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group pull-right">
                <button type="submit" class="btn btn-danger modal-confirm">Kaydet</button>
                &nbsp;&nbsp;&nbsp;
                <button class="btn btn-default modal-dismiss" data-dismiss="modal">İptal</button>&nbsp;&nbsp;
            </div>
        </form>
    </div>
</div>

@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}