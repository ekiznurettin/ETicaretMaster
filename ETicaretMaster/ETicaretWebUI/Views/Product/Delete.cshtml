@model ProductListViewModel
@{
    ViewData["Title"] = "Ürün Silme İşlemi";
    Layout = null;
}

<div class="row">
    <div class="col-lg-12">
        <form asp-action="Delete" onsubmit="return JQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.Product.ProductId" />
            <h4>Bu Ürünü Silmek İstediğinizden Emin misiniz?</h4><br />
            <div class="row pull-right">
                <button type="submit" class="btn btn-danger modal-confirm">Evet</button>
                &nbsp;&nbsp;&nbsp;
                <button class="btn btn-default modal-dismiss" data-dismiss="modal">İptal</button>&nbsp;&nbsp;
            </div>
        </form>
    </div>
</div>


